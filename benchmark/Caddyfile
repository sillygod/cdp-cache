{
    order http_cache before reverse_proxy
}

:9991 {
    reverse_proxy {
        to localhost:9995
        header_up Host {http.reverse_proxy.upstream.host}
    }

    http_cache {
        cache_type in_memory
        match_path /
    }
}

:9992 {
    reverse_proxy {
        to localhost:9995
        header_up Host {http.reverse_proxy.upstream.host}
    }

    http_cache {
        cache_type file
        match_path /
        path /tmp/cache
    }

}

:9995 {
    header Cache-control "public"
    root * /tmp/caddy-benchmark
    file_server
    encode gzip zstd

    log {
        level info
    }
}
